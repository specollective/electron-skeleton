{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "main/*": ["./src/main/*"],
      "renderer/*": ["./src/renderer/*"],
    },
    "jsx": "react-jsx",
    "types": ["react/next", "react-dom/next"],
  },
  "include": ["src/**/*"]
}
